<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.stage.*?>

<Stage xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="views.game.GameController">
    <scene>
        <Scene stylesheets="@/css/style.css">
            <AnchorPane prefHeight="546.0" prefWidth="830.0" styleClass="game-info">
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </padding>
                <VBox prefHeight="329.0" prefWidth="460.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                    <Label text="Folder"/>
                    <TextField fx:id="textFieldDirectoryName" disable="true" editable="false"/>
                    <Label text="Alt Name (used if  folder name is bad)"/>
                    <TextField fx:id="textFieldAltName"/>
                    <Label text="Steam Game">
                        <VBox.margin>
                            <Insets top="5.0"/>
                        </VBox.margin>
                    </Label>
                    <HBox prefWidth="200.0">
                        <ChoiceBox fx:id="choiceBoxGame" prefHeight="28.0" prefWidth="387.0"/>
                        <Hyperlink fx:id="hyperlinkShowGame" text="Steam Page">
                            <HBox.margin>
                                <Insets left="10.0"/>
                            </HBox.margin>
                        </Hyperlink>
                    </HBox>
                    <Label text="Executable "/>
                    <ChoiceBox fx:id="choiceBoxExec" prefHeight="28.0" prefWidth="387.0"/>
                </VBox>
                <Button mnemonicParsing="false" onMouseClicked="#save" text="Save" AnchorPane.bottomAnchor="0.0" AnchorPane.rightAnchor="0.0"/>
            </AnchorPane>
        </Scene>
    </scene>
</Stage>
