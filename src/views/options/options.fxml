<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.stage.*?>

<Stage title="Settings" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="views.options.OptionsController">
    <scene>
        <Scene>
            <AnchorPane>
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </padding>
                <VBox prefHeight="329.0" prefWidth="460.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                    <Label text="Ignored Folder Names (Comma separated):"/>
                    <TextArea fx:id="textAreaIgnoredFolderNames" prefHeight="50.0" prefWidth="200.0">
                        <VBox.margin>
                            <Insets top="5.0"/>
                        </VBox.margin>
                    </TextArea>
                </VBox>
                <Button mnemonicParsing="false" onMouseClicked="#saveOptions" text="Save" AnchorPane.bottomAnchor="0.0" AnchorPane.rightAnchor="0.0"/>
            </AnchorPane>
        </Scene>
    </scene>
</Stage>
