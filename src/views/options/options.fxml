<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.stage.*?>

<Stage maxHeight="400.0" maxWidth="540.0" minHeight="400.0" minWidth="540.0" title="Settings" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="views.options.OptionsController">
    <scene>
        <Scene>
            <AnchorPane prefHeight="400.0" prefWidth="540.0">
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </padding>
                <VBox prefHeight="329.0" prefWidth="460.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                    <Label text="Ignored Folder Names (Comma separated):">
                  <VBox.margin>
                     <Insets top="10.0" />
                  </VBox.margin></Label>
                    <TextArea fx:id="textAreaIgnoredFolderNames" prefHeight="100.0" prefWidth="200.0">
                        <VBox.margin>
                            <Insets top="5.0" />
                        </VBox.margin>
                    </TextArea>
               <Label text="Real Games Path (Needed only if Steam Grid Kit is used via network)">
                  <VBox.margin>
                     <Insets top="10.0" />
                  </VBox.margin>
               </Label>
               <TextField fx:id="textFieldLocalGamesPath" />
               <Label text="Local Shortcuts Path (Needed only if Steam Grid Kit is used over network)">
                  <VBox.margin>
                     <Insets top="10.0" />
                  </VBox.margin>
               </Label>
               <TextField fx:id="textFieldLocalVdfPath" />
               <AnchorPane prefHeight="35.0">
                  <children>
                     <Label text="SteamGridDb Api Key" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="5.0" />
                     <Hyperlink onMouseClicked="#gotoSteamGridDbWebsite" text="How to get?" AnchorPane.leftAnchor="250.0" AnchorPane.topAnchor="0.0" />
                     <Button mnemonicParsing="false" onMouseClicked="#testSteamGridDbApi" text="Test Connection" AnchorPane.leftAnchor="130.0" />
                  </children>
                  <VBox.margin>
                     <Insets top="10.0" />
                  </VBox.margin>
               </AnchorPane>
               <TextField fx:id="textFieldSteamGridDbApiKey" />
                </VBox>
                <Button fx:id="buttonSave" mnemonicParsing="false" onMouseClicked="#saveOptions" text="Save" AnchorPane.bottomAnchor="0.0" AnchorPane.rightAnchor="0.0" />
            <Button fx:id="buttonClear" mnemonicParsing="false" onMouseClicked="#clearGames" text="Clear Cached Games" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" />
            </AnchorPane>
        </Scene>
    </scene>
</Stage>
